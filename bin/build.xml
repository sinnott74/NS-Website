<?xml version="1.0" encoding="UTF-8"?>
<project name="TranformXml" default="TransformFile">

  <property
    name="dir.home"
    value="${basedir}"
  />
  <property
    name="dir.doc"
    value="${dir.home}/doc"
  />
  <property
    name="dir.data"
    value="${dir.home}/data"
  />
  <property
    name="dir.styles"
    value="${dir.home}/styles"
  />
  <property
    name="file.xml.main"
    value="${dir.data}/main.xml"
  />
  <property
    name="file.html.index"
    value="${dir.doc}/index.html"
  />
  <property
    name="file.xsl.main"
    value="${dir.styles}/main.xsl"
  />

  <target name="TransformFile">
    <!-- Transform one file into an HTML file -->
    <xslt 
      in="${file.xml.main}" 
      out="${file.html.index}" 
      style="${file.xsl.main}"
      force="true"
      >
      <param
        expression="${dir.data}" 
        name="data-dir"
      />
      <param
        expression="${dir.doc}" 
        name="web-dir"
      />
    </xslt>
  </target>
  
</project>